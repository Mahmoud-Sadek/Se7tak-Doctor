<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/base_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_80sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="@dimen/_2sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_25sdp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_4sdp">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/doctor_type_TV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingEnd="@dimen/_6sdp"
                                            android:paddingBottom="10dp"
                                            android:text="@string/doctor"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/doctor_name_TV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingBottom="10dp"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>


                                    <TextView
                                        android:id="@+id/doctor_about_TV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="13sp" />

                                    <RatingBar
                                        android:id="@+id/doctor_rating_bar"
                                        style="@style/Widget.AppCompat.RatingBar.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:theme="@style/RatingBar" />

                                    <TextView
                                        android:id="@+id/doctor_rating_TV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bottun_bac"
                                        android:padding="@dimen/_4sdp"
                                        android:paddingBottom="5dp"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_4sdp">

                                            <ImageView
                                                android:layout_width="@dimen/_20sdp"
                                                android:layout_height="@dimen/_20sdp"
                                                android:layout_gravity="center"
                                                android:layout_margin="@dimen/_2sdp"
                                                android:src="@drawable/icons_doctor_appointment"
                                                android:tint="@color/colorPrimaryDark" />

                                            <LinearLayout
                                                android:layout_width="match_parent"

                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/specialty"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="@dimen/_12sdp" />

                                                <TextView
                                                    android:id="@+id/doctor_specialty_TV"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:paddingBottom="10dp"
                                                    android:textColor="@color/dark_gray"
                                                    android:textSize="@dimen/_12sdp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_4sdp">

                                            <ImageView
                                                android:layout_width="@dimen/_20sdp"
                                                android:layout_height="@dimen/_20sdp"
                                                android:layout_gravity="center"
                                                android:layout_margin="@dimen/_2sdp"
                                                android:src="@drawable/icon_cash"
                                                android:tint="@color/colorPrimaryDark" />

                                            <LinearLayout
                                                android:layout_width="match_parent"

                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/fees"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="@dimen/_12sdp" />

                                                <TextView
                                                    android:id="@+id/docotr_examinations_TV"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:paddingBottom="10dp"
                                                    android:textColor="@color/dark_gray"
                                                    android:textSize="@dimen/_12sdp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>
                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>
                            </FrameLayout>
                        </android.support.v7.widget.CardView>

                    </FrameLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/docotr_profile_img"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:src="@drawable/icons_doctor"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_circle_background_color="@color/cardview_light_background" />

                </FrameLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/icon_marker"
                                android:tint="@color/colorPrimaryDark" />

                            <TextView
                                android:id="@+id/doctor_location_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="10dp"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>




                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/icon_about"
                                android:tint="@color/colorPrimaryDark" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="10dp"
                                android:text="@string/about_the_doctor"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/doctor_about2_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/icon_hospital"
                                android:tint="@color/colorPrimaryDark" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="10dp"
                                android:text="@string/about_the_clinic"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_14sdp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/clinic_name_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/clinic_photos_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call_clinic_img"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_8sdp"
                        android:src="@drawable/ic_phone_black_24dp"
                        android:tint="@color/colorPrimaryDark" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_50sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/icon_nurse"
                                android:tint="@color/colorPrimaryDark" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="10dp"
                                android:text="@string/about_the_clinic"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/assistant_name_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call_assistant_img"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_8sdp"
                        android:src="@drawable/ic_phone_black_24dp"
                        android:tint="@color/colorPrimaryDark" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_margin="8dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="4dp"
                    >

                    <ImageView
                        android:id="@+id/doctor_certificate"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


    <Button
        android:id="@+id/doctor_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:background="@drawable/bottun_bac"
        android:text="@string/publish_doctor"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14sdp" />
 </android.support.design.widget.CoordinatorLayout>