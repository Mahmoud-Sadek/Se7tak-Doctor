<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_address_map_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MapsActivity">

    <fragment

        android:id="@+id/confirm_address_map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- Image View that acts as map marker notice centerInParent-->

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />


    <ImageView
        android:id="@+id/confirm_address_map_custom_marker"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_map_pin" />
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="100dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="end"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:background="@drawable/button_border_signup"/>
</RelativeLayout>